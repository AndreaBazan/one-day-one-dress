<div class="dresses-grid">
  <% @dresses.each do |dress| %>
    <div class="dresses-grid-card" >
      <div class="thumbnail">
        <%= cl_image_tag dress.photo, height: 50%>
        <div class="caption">
          <h2><%= link_to dress.title.capitalize +  ' dress', dress_path(dress) %></h2>
          <p><%= dress.description %></p>
          <p>Size: <strong><%= dress.size %></strong></p>
          <p>Category: <strong><%= dress.category %></strong></p>
          <p>Price: MXN <strong>$<%= dress.price %></strong></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
