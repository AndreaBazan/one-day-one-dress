
<div class="container">
 <div class="form">
  <%= simple_form_for(@dress) do |f| %>
     <%= f.error_notification %>
     <div class="input">
       <%= f.input :title %>
     </div>
     <div class="text-input">
       <%= f.input :description %>
     </div>
     <div class="text-input">
       <%= f.input :price %>
     </div>
     <div class="text-input">
       <%= f.input :heigth %>
     </div>
     <div class="form-inputs">
       <%= f.input :category, collection: Dress::CATEGORIES %>
     </div>
     <div class="form-inputs">
       <%= f.input :size, collection: Dress::SIZES %>
     </div>
     <div>
       <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
     </div>
     <div class="button submit">
       <%= f.button :submit %>
     </div>
   <% end %>
 </div>
