<div class="dresses-grid">
  <% @dresses.each do |dress| %>
    <div class="dresses-grid-card" >
      <div class="thumbnail">
        <img src="https://loremflickr.com/320/240/dress?random=#{rand(100)}" alt="Flowers" >
        <div class="caption">
          <h2><%= link_to dress.title.capitalize +  ' dress', dress_path(dress) %></h2>
          <p><%= dress.description %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
