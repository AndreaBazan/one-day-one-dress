<div class="row">
  <div class="col-md-6">
    <h3><%= @user.email %></h3>
    <h4>My rented dresses:</h4>
    <ul>
      <% if @user.rentals.any? %>
        <% @user.rentals.each do |rental| %>
        <li><%= rental %></li>
        <% end %>
      <% else %>
        <p>You don't have any rented dresses yet. You should rent one! </p>
      <% end %>
    </ul>
    <% if @user.dresses.any? %>
      <h3>Dresses that you have for rent:</h3>
      <ul>
        <% @user.dresses[0..(@dresses.size - 1)].each do |dress| %>
          <li>
            <p><strong>Title:</strong><%= dress.title %> <strong>| Description:</strong> <%= dress.description %> <strong>Size:</strong><%= dress.size%> </p>
            <p><%= link_to("Edit", edit_user_dress_path(@user, dress)) %></p>
          </li>
        <% end %>
      </ul>
    <% else  %>
      <p>You have not created any dresses for rent. You should create one!</p>
    <% end  %>
  </div>
  <div class="col-md-6">

      <h3>Add a new dress for rent:</h3>
      <%= simple_form_for [@user, @space] do |f| %>
        <%= f.input :title %>
        <%= f.input :category %>
        <%= f.input :description %>
        <%= f.input :size %>
        <%= f.input :heigth %>
        <%= f.input :price %>
        <%= f.button :submit, class: "btn btn-success" %>
      <% end %>

  </div>
</div>