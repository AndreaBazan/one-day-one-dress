<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h1><%= @dress.title %></h1>
      <h2>Type: <%= @dress.category %></h2>
      <p>Size: <%= @dress.size %></p>
      <p><%= @dress.description %></p>
      <p>For persons around <%= @dress.heigth %>cm tall.</p>
      <p>Price per day: <%= @dress.price %>$</p>
    </div>
    <div class="col-xs-6">
      <h4>What dates do you need it?</h4>
      <%= simple_form_for([@dress, @rental]) do |f| %>
      <%= f.input :start_date %>
      <%= f.input :end_date %>
      <%= f.submit %>
    <% end %>
    </div>
  </div>
</div>
